%header#header.top
  .inner
    .inner__left
      - if user_signed_in?
        .user-photo
          = link_to '#' do 
            = image_tag "/assets/png/profile.png", alt: "プロフィール写真"
      .logo
        = link_to root_path do
          = image_tag "/assets/png/eLS_logo.png", alt: "title_logo"
    .search
      = form_with(url: '#' , method: :get, local: :true) do |f|
        = f.text_field :search_word, class: 'search__window', placeholder: 'キーワード検索'
        = f.button type: 'submit', class: 'search__btn' do
          = icon('fas', 'search')
    - if user_signed_in?
      .tmp-signout
        = link_to "サインアウト", destroy_user_session_path, method: :delete
    - else
      .tmp-signup
        = link_to "ユーザー登録", new_user_registration_path
      .tmp-signin
        = link_to "ログイン", new_user_session_path

    = link_to new_article_path do
      .create-new
        = icon('fas', 'edit', class: 'create-new__icon')
        新規作成